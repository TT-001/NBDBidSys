@model IEnumerable<NBD_TractionFive.Models.inventoryVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Inventory Summary</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.quantityOnHands)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                Price/each
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(String.Format("{0} {1}", item.quantityOnHands, " pcs"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @(String.Format("{0} {1}", "$", item.price))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary" role="button">Back to List</a>

</div>
